- alert_classes = { "notice" => "success", "info" => "info", "warning" => "warning", "error" => "danger"}
- flash.each do|name, msg|
  - if msg.is_a?(String)
    %div{ :class => "alert alert-#{alert_classes[name] || "info"} alert-dismissibal"}
      %button{:type => "button", :class => "close", "data-dismiss" => "alert"}
        %span{"aria-hidden" => "true"} &times;
      = content_tag :div, msg, :id => "flash_#{name}"

